<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- displays site properly based on user's device -->
  <link rel="icon" type="image/png" sizes="32x32" href="static/images/favicon-32x32.png">
  <link rel="stylesheet" href="static/css/qr_component.css" />
  <script  type="text/javascript" crossorigin="anonymous"src="https://unpkg.com/qr-code-styling@1.5.0/lib/qr-code-styling.js"></script>
  <title>Qr component</title>
</head>

<body>
  <div id="main">
    <div id="qr-section">
      <h3></h3>
      <div id="qr-generate">
        <input type="text" id='input-text-qr' placeholder='write to generate qr' />
        <button id="btn-qr-generate">gen</button>
      </div>
      <div id="qr-card">
        <div id="qr">
        </div>
        <div id="qr-description">
          <h2>Improve your front-end skills by bulding projects</h2>
          <p>Scan the QR code to visit Frontend Mentor and take your coding skills to next level</p>
        </div>
      </div>
    </div>
    <footer id="footer">
      Challenge by <a href="https://www.frontendmentor.io?ref=challenge" target="_blank">Frontend Mentor</a>.
      Coded by <a href="https://github.com/KevinSDJ" target="_blank">KevinSDJ</a>.
    </footer>
  </div>
  <script>
    let qr_element= document.getElementById('qr')
    let qr_generator= document.getElementById('btn-qr-generate')
    let def= true

    if(def){
      const qrCode = new QRCodeStyling({
        width: 150,
        height: 150,
        type: "svg",
        data: "sadsadsadsa",
        image: "static/images/favicon-32x32.png",
        dotsOptions: {
            color:'white',
            type:'rounded'
        },
        backgroundOptions: { 
           color:"rgb(18, 111, 218)"
        },
        imageOptions: {
            crossOrigin: window.location.origin,
            margin: 10,
            imageSize:0.4
        }
    });
    qrCode.append(qr_element)
    }
    qr_generator.addEventListener('click',()=>{
      let text= document.getElementById('input-text-qr').value
      let lastchild= qr_element.lastChild
      if(lastchild){
        qr_element.removeChild(lastchild)
      }
      def=false
      const qrCode = new QRCodeStyling({
        width: 150,
        height: 150,
        type: "svg",
        data: text,
        image: "static/images/favicon-32x32.png",
        dotsOptions: {
            color:'white',
            type:'rounded'
        },
        backgroundOptions: { 
           color:"rgb(18, 111, 218)"
        },
        imageOptions: {
            crossOrigin: window.location.origin,
            margin: 10,
            imageSize:0.4
        }
      });
      qrCode.append(qr_element)
      setTimeout(()=>document.getElementById('input-text-qr').value='',1000)
    })

  </script>
</body>

</html>